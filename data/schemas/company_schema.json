    "platform": {
      "name": "string|null",
      "description": "string|null",
      "unique_capabilities": [
        {
          "capability": "string",
          "description": "string|null"
        }
      ],
      "source": {
        "id": "string",
        "slide": "number|null",
        "verified": "boolean"
      }
    },
    "financials": {
      "cash_position": "string|null",
      "cash_runway": "string|null",
