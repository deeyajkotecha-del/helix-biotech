    "recommended_sections": [
      "investment_thesis_summary",
      "investment_analysis",
      "pipeline_summary",
      "platform",
      "financials",
      "catalysts",
      "sources"
    ],
    "banned_fields": ["source_slide"]
  },
  "_template": {
