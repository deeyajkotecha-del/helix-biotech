    },
    "investment_analysis": {
      "bull_case": ["string"],
      "bear_case": ["string"],
      "key_debates": [
        {
          "question": "string",
          "bull_view": "string|null",
          "bear_view": "string|null",
          "what_resolves_it": "string|null"
        }
      ],
      "valuation_framework": "object|null"
