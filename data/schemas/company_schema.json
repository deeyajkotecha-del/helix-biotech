{
  "_schema_meta": {
    "version": "2.1",
    "description": "Company data schema for SatyaBio biotech company data management",
    "required_fields": [
      "_metadata.version",
      "ticker",
      "name",
      "company.name",
      "company.ticker"
    ],
    "sections": [
      "_metadata",
      "ticker",
      "name",
      "company",
      "investment_thesis_summary",
      "investment_analysis",
      "pipeline_summary",
      "platform",
      "financials",
      "catalysts",
      "management_track_record",
      "sources",
      "market_opportunity",
      "competitive_positioning",
      "risks"
